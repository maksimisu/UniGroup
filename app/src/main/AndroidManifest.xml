<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blackbird.unigroup">

    <uses-permission android:name="android.permission.SEND_SMS" />

    <!-- REQUIRED FROM ANDROID 11 -->
    <queries>
        <package android:name="android.content.pm"/>
    </queries>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UniGroup" >
        <activity android:name=".activities.EditStudentActivity"/>
        <activity android:name=".activities.AddStudentActivity" />
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.StudentsListActivity" />
        <activity android:name=".activities.StudentActivity" />
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity">
            <!-- REQUIRED FROM ANDROID 11 -->
            <intent-filter>
                <action android:name="android.intent.action.SENDTO"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="mailto" />
            </intent-filter>
        </activity>
    </application>

</manifest>