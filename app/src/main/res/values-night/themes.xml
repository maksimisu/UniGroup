<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UniGroup" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_black</item>
        <item name="colorPrimaryVariant">@color/gray_900</item>
        <item name="colorOnPrimary">@color/gray_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_900</item>
        <item name="colorOnSecondary">@color/gray_100</item>
        <!-- Surface brand color. -->
        <item name="colorSurface">@color/gray_900</item>
        <!-- Status bar. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_black</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>
</resources>